[user]
	name = "SVAKSHA"
	email = svaksha@gmail.com

[bitbucket]
	user = svaksha
[gitlab]
	user = svaksha
[github]
	user = svaksha

[alias]
	g         = git
    gt        = git 
    got       = git 
	ga        = git add
    gb        = git branch
    gc        = git commit -v
    gd        = git diff
    gs        = git status
    ci        = commit
    cm        = commit
    cia       = commit -a
    cim       = commit -m
    ciam      = commit -a -m
    co        = checkout
    gx        = gitx --all
# too many alias acronyms, need to cleanup and re-order this cheatsheet
    last      = log -1 HEAD
	svnrb     = svn rebase
    st        = status
    unstage   = reset HEAD --
    visual    = !gitk
    dstat     = diff --stat
    diffclr   = diff --color-words
    diffw     = diff -w
    diffx     = diff -w --color-words
    pff       = pull --ff-only
    mff       = merge --ff-only
    logg      = log --graph --decorate
    logpretty = log --graph --pretty=oneline --abbrev-commit --decorate
    logtime   = log --format='%C(yellow)%h %Cgreen%an %Cblue%ar %Creset- %s'
    lcmit     = log --graph --decorate --pretty=oneline --abbrev-commit
    logall    = log --graph --decorate --pretty=oneline --abbrev-commit --all
    loggraph  = log --all --graph --decorate
    logrefs   = log --all --graph --decorate --oneline --simplify-by-decoration --no-merges
    loglocal  = log --oneline origin..HEAD
    logfetch  = log --oneline HEAD..origin/master
    detach    = checkout HEAD^0
    hdiff     = diff HEAD~
    cont      = rebase --continue
    abort     = rebase --abort

[color]
	# Use colors in Git commands that are capable of colored output when
	# outputting to the terminal. Default setting in Git ≥ 1.8.4
	#---------------------------------------------------------------------------
	branch      = true
	diff        = true
	interactive = true
	pager       = true
	status      = true
	ui          = true
    
    [color "branch"]
	current = cyan bold
	local   = cyan bold
	remote  = yellow bold

    [color "diff"]
	frag = cyan bold
	meta = green bold
	old  = yellow       # for deletions
	new  = green bold   # all additions
 
    [color "status"]
    added     = cyan bold
    changed   = green bold
    untracked = yellow bold 

    [color "default"] 
    cursor       = magenta
    date         = cyan 
    delimiter    = blue 
    line-number  = yellow bold
    diff-header  = yellow 
    diff-index   = blue 
    diff-chunk   = green bold
    graph-commit = cyan 
	    
[core]
	# Use custom `.gitignore_global` and `.gitattributes`
	#---------------------------------------------------------------------------	
	attributesfile = ~/.gitattributes	
	excludesfile   = ~/.gitignore_global

    # Prevent showing files whose names contain non-ASCII symbols as unversioned.
    # From, http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
	#---------------------------------------------------------------------------	
    precomposeunicode = false

[diff]
	# Detect copies as well as renames
	#---------------------------------------------------------------------------	
	renames = copies
	
[grep]
    linenumber = true

[help]
	# Autocorrect and execute mistyped commands
	#---------------------------------------------------------------------------
	autocorrect = 1
	
[http]
	sslVerify = false

[push]
	default = nothing


